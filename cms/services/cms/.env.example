# CMS Service Environment Configuration
# Copy this file to .env and update the values accordingly

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME="CMS API"
PROJECT_VERSION="1.0.0"
API_V1_STR="/api/v1"

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cms_db
POSTGRES_USER=cms_user
POSTGRES_PASSWORD=cms_password
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate a secure secret key in production
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS AND ALLOWED HOSTS
# ===========================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
UPLOAD_DIR=/app/media
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.mp3,.mp4,.wav

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/cms.log
SENTRY_DSN=  # Optional: Add Sentry DSN for error tracking

# ===========================================
# CATEGORY MANAGEMENT SETTINGS
# ===========================================
MAX_CATEGORY_DEPTH=5
DEFAULT_CATEGORY_LANGUAGE=ar
CATEGORY_CACHE_TTL=3600

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP Settings
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAILS_FROM_EMAIL=noreply@cms.local
EMAILS_FROM_NAME="CMS System"

# Development Email (MailHog)
# SMTP_HOST=mailhog
# SMTP_PORT=1025

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
WORKERS_PER_CORE=1
MAX_WORKERS=4
WEB_CONCURRENCY=4

# ===========================================
# DOCKER COMPOSE PORTS
# ===========================================
CMS_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081
MAILHOG_WEB_PORT=8025
MAILHOG_SMTP_PORT=1025

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# ===========================================
# PRODUCTION-SPECIFIC SETTINGS
# ===========================================
# Uncomment and configure for production deployment

# SSL Configuration
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Data Paths (Production)
# DATA_PATH=/var/lib/cms/data
# BACKUP_PATH=/var/lib/cms/backups

# Monitoring (Optional)
# GRAFANA_PASSWORD=secure_grafana_password

# Performance Tuning
# POSTGRES_MAX_CONNECTIONS=200
# POSTGRES_SHARED_BUFFERS=256MB
# REDIS_MAXMEMORY=512mb
# REDIS_MAXMEMORY_POLICY=allkeys-lru